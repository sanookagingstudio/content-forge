{
  "version":"v1",
  "auth":{
    "mode":"OIDC_OPTIONAL",
    "required_jwt_claims":["sub","email","tenant","roles"]
  },
  "endpoints":{
    "web_base":"http://localhost:3000",
    "forge_api_base":"http://localhost:4000",
    "forge_exposes":[
      {"method":"GET","path":"/health"},
      {"method":"POST","path":"/v1/jobs"},
      {"method":"POST","path":"/v1/jobs/{jobId}/resume"},
      {"method":"GET","path":"/v1/jobs/{jobId}"},
      {"method":"GET","path":"/v1/artifacts/{jobId}/{path}"}
    ]
  }
}

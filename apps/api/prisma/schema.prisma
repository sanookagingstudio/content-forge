generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum JobStatus {
  queued
  running
  succeeded
  failed
}

model Brand {
  id               String   @id @default(cuid())
  name             String   @unique
  voiceTone        String
  prohibitedTopics String
  targetAudience   String
  channelsJson     String   // JSON array string
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  personas Persona[]
  series   ContentSeries[]
  plans    ContentPlan[]
}

model Persona {
  id            String   @id @default(cuid())
  brandId       String
  name          String
  styleGuide    String
  doDontJson    String   // JSON object string
  examplesJson  String   // JSON array string
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  brand Brand @relation(fields: [brandId], references: [id], onDelete: Cascade)
}

model Universe {
  id          String   @id @default(cuid())
  name        String
  description String
  language    String   @default("th")
  canonJson   String   @default("{}") // high-level rules, tone
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  characters  Character[]
  series      ContentSeries[]
  events      CanonEvent[]
  crossovers  CrossoverRule[]
  jobs        ContentJob[]
}

model Character {
  id          String   @id @default(cuid())
  universeId  String
  name        String
  bio         String
  traitsJson  String   @default("{}") // personality, speech, visual notes
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  universe    Universe @relation(fields: [universeId], references: [id], onDelete: Cascade)
}

model CanonEvent {
  id          String   @id @default(cuid())
  universeId  String
  title       String
  summary     String
  timeIndex   Int      @default(0) // timeline ordering
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  universe    Universe @relation(fields: [universeId], references: [id], onDelete: Cascade)
}

model CrossoverRule {
  id          String   @id @default(cuid())
  universeId  String
  fromSeriesId String
  toSeriesId   String
  ruleJson    String   @default("{}") // allowed characters, constraints
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  universe    Universe @relation(fields: [universeId], references: [id], onDelete: Cascade)
}

model ProductTemplate {
  id          String   @id @default(cuid())
  key         String   @unique // "ebook"|"course"|"stock-pack"|"pod-pack"
  name        String
  schemaJson  String   @default("{}") // what files to create
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isActive    Boolean  @default(true)
}

model ProductExport {
  id          String   @id @default(cuid())
  jobId       String
  templateKey String
  mode        String   // "draft"|"publish"
  status      String   @default("created")
  exportPath  String
  manifestJson String  @default("{}")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ContentSeries {
  id              String   @id @default(cuid())
  brandId         String
  universeId      String?
  seriesName      String
  pillar          String
  cadence         String
  targetChannelMix String  // JSON object string
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  brand Brand @relation(fields: [brandId], references: [id], onDelete: Cascade)
  universe Universe? @relation(fields: [universeId], references: [id], onDelete: SetNull)
  plans ContentPlan[]
}

model ContentPlan {
  id                 String   @id @default(cuid())
  brandId            String
  scheduledAt        DateTime
  channel            String
  seriesId           String?
  objective          String
  cta                String
  assetRequirements  String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  brand  Brand         @relation(fields: [brandId], references: [id], onDelete: Cascade)
  series ContentSeries? @relation(fields: [seriesId], references: [id], onDelete: SetNull)
  jobs   ContentJob[]
}

model CapabilityProvider {
  id            String   @id @default(cuid())
  kind          String   // "text" | "image" | "video"
  name          String
  version       String
  supports      String   // JSON string: supported features
  costTier      String   // "cheap" | "standard" | "premium"
  qualityTier   String   // "fast" | "standard" | "hq"
  speedTier     String   // "fast" | "standard" | "slow"
  regions       String   // JSON list
  languages     String   // JSON list
  policyTags    String   // JSON list e.g. ["safe","strict","adult_warn"]
  isDefault     Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  jobs ContentJob[]
}

model PolicyProfile {
  id          String   @id @default(cuid())
  name        String
  platform    String   // "youtube"|"tiktok"|"facebook"|"instagram"|"line"|"general"
  rulesJson   String   // JSON: rules + thresholds
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())
  isActive    Boolean  @default(true)
}

model ContentJob {
  id                String    @id @default(cuid())
  planId            String
  universeId        String?
  status            JobStatus
  inputsJson        String
  outputsJson       String
  advisoryJson      String    @default("{}") // Jarvis advisory warnings/suggestions
  selectedProviderId String?
  selectorJson      String    @default("{}") // reason, score, chosen
  sentinelJson      String    @default("{}") // optional enrichment signals
  policyJson        String    @default("{}") // policy evaluation results
  canonPacketJson   String    @default("{}") // snapshot packet used at generation/export time
  onAirGateRequired Boolean   @default(false) // hard gate marker
  copyrightRiskTier String    @default("unknown") // "low"|"medium"|"high"|"unknown"
  costJson          String
  logsJson          String
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  plan            ContentPlan        @relation(fields: [planId], references: [id], onDelete: Cascade)
  universe        Universe?          @relation(fields: [universeId], references: [id], onDelete: SetNull)
  selectedProvider CapabilityProvider? @relation(fields: [selectedProviderId], references: [id], onDelete: SetNull)
  assets          Asset[]
}

model Asset {
  id        String   @id @default(cuid())
  jobId     String
  type      String
  uri       String
  metadata  String
  createdAt DateTime @default(now())

  job ContentJob @relation(fields: [jobId], references: [id], onDelete: Cascade)
}
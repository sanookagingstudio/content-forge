{
  "name": "content-forge-api",
  "private": true,
  "version": "0.3.6",
  "main": "server.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "db:migrate": "prisma migrate dev --name init --skip-generate",
    "db:generate": "prisma generate",
    "db:seed": "tsx src/seed.ts",
    "pretest": "npm run db:generate",
    "prebuild": "npm run db:generate",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "build": "tsc"
  },
  "dependencies": {
    "@content-forge/core": "0.3.4",
    "fastify": "^4.28.0",
    "@fastify/cors": "9.0.1",
    "zod": "^3.24.1",
    "@prisma/client": "^6.3.1"
  },
  "devDependencies": {
    "typescript": "^5.7.3",
    "prisma": "^6.3.1",
    "tsx": "^4.19.2",
    "@types/node": "^22.10.2",
    "vitest": "^2.1.0"
  }
}
